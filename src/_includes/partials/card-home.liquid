<div class="card shadow-sm w-100 h-100 d-flex flex-column">
  <div class="card-body d-flex flex-column">
    <div>
      <a class="link-underline link-underline-opacity-0" href="{{ item.url }}">
        <h3 class="card-title">{{ item.data.title }}</h3>
      </a>
      <p class="card-text mb-2">{{ item.data.summary }}</p>
    </div>
    <div class="mt-auto d-flex justify-content-between align-items-center">
      {% include "partials/readmore.liquid" %}
      <small class="text-muted">
        {% include "partials/date.liquid" %}
      </small>
    </div>
  </div>
</div>
