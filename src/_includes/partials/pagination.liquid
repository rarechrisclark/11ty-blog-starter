<div class="row d-flex justify-content-center mt-3">
  <div class="col-12">
    <div class="row">
      {% comment %}Previous Page{% endcomment %}
      <div class="col-6">
        {%- if pagination.href.previous -%}
          <a class="btn btn-primary w-100" href="{{ pagination.href.previous }}" aria-label="Previous">
            &laquo; Prev
          </a>
        {%- else -%}
          <button class="btn btn-primary w-100 disabled" aria-label="Previous" disabled>
            &laquo; Prev
          </button>
        {%- endif -%}
      </div>

      {% comment %}Next Page{% endcomment %}
      <div class="col-6">
        {%- if pagination.href.next -%}
          <a class="btn btn-primary w-100" href="{{ pagination.href.next }}" aria-label="Next">
            Next &raquo;
          </a>
        {%- else -%}
          <button class="btn btn-primary w-100 disabled" aria-label="Next" disabled>
            Next &raquo;
          </button>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
